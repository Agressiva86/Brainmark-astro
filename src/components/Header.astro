---
import brainmarkLogo from "../assets/brainmark_logo.svg";
---

<header class="flex flex-col lg:flex-row gap-10 items-center pt-10">
    <div class="lg:basis-1/3">
        <a href="#" class="flex flex-row gap-5 items-center">
            <img src={brainmarkLogo.src} alt="Brainmark Logo" />
            <h1 class="text-3xl font-semibold text-violet-950 dark:text-white">
                Brainmark <spam
                    class="block text-xs tracking-wider opacity-30 font-normal"
                    >astro personal template</spam
                >
            </h1>
        </a>
    </div>
    <div class="lg:basis-2/3 lg:justify-items-end">
        <label for="dark-toggle" class="flex items-center cursor-pointer">
            <div class="relative">
                <input
                    type="checkbox"
                    name="dark-mode"
                    id="dark-toggle"
                    class="checkbox hidden"
                />
                <div
                    class="block border-2 dark:border-white/50 border-violet-600/40 w-[40px] h-6 rounded-full"
                >
                </div>
                <div
                    class="dot absolute left-1 top-1 dark:bg-white bg-violet-700 w-4 h-4 rounded-full transition"
                >
                </div>
            </div>
            <div class="ml-3 dark:text-white text-sm text-slate-900">
                Dark Mode
            </div>
        </label>
    </div>
</header>

<style>
    input:checked ~ .dot {
        transform: translateX(100%);
    }
</style>

<script type="text/javascript">
    function darkModeListener() {
        document.querySelector("html").classList.toggle("dark");
    }

    document
        .querySelector("input[type='checkbox']#dark-toggle")
        .addEventListener("click", darkModeListener);
</script>
