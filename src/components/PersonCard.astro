                    <path
                        d="M22.1904 23.6063C21.2831 23.6063 20.5475 22.8708 20.5475 21.9635C20.5475 21.0561 21.2831 20.3206 22.1904 20.3206C23.0977 20.3206 23.8333 21.0561 23.8333 21.9635C23.8333 22.8708 23.0977 23.6063 22.1904 23.6063Z"
                        class="fill-violet-500 dark:fill-white"></path>
                    <path
                        d="M12.3333 23.6063C11.4259 23.6063 10.6904 22.8708 10.6904 21.9635C10.6904 21.0561 11.4259 20.3206 12.3333 20.3206C13.2406 20.3206 13.9761 21.0561 13.9761 21.9635C13.9761 22.8708 13.2406 23.6063 12.3333 23.6063Z"
                        class="fill-violet-500 dark:fill-white"></path>
                    <path
                        d="M2.47611 23.6063C1.56878 23.6063 0.833253 22.8708 0.833253 21.9635C0.833253 21.0561 1.56878 20.3206 2.47611 20.3206C3.38344 20.3206 4.11897 21.0561 4.11897 21.9635C4.11897 22.8708 3.38344 23.6063 2.47611 23.6063Z"
